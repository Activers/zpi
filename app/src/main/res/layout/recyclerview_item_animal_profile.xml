<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_roots"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

<androidx.cardview.widget.CardView
    android:id="@+id/cardViewProfile"
    android:layout_width="match_parent"
    android:background="#EAFBC7"
    android:layout_height="100dp">
    <!--app:cardBackgroundColor="#664666"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ImageViewAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:src="#E9FAC4"
            app:civ_border_color="#548C54"
            app:civ_border_width="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/maiandra"
                android:text="IMIÄ˜ ZWIERZAKA"
                android:textColor="#23613C"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewPetRase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/maiandra"
                android:gravity="center"
                android:text="WYBRANY GATUNEK Z LISTY"
                android:textColor="#23613C"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

</RelativeLayout>
