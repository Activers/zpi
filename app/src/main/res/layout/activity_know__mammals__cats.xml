<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:weightSum="10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="@drawable/addanimal_header">

            <TextView
                android:id="@+id/TextViewAddAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maiandra"
                android:layout_marginBottom="12dp"
                android:text="KOT"
                android:textColor="#EAFBC7"
                android:textSize="28sp"
                tools:ignore="RtlHardcoded"
                />
        </LinearLayout>


        <Button
            android:id="@+id/buttonCatDachowiec"
            android:layout_width="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_height="57dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_animal_buttom"
            android:fontFamily="@font/maiandra"
            android:text="DACHOWIEC"
            android:textColor="#E3FFDD"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonCatBrytyjski"
            android:layout_width="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_animal_buttom"
            android:fontFamily="@font/maiandra"
            android:text="BRYTYJSKI KROTKOWŁOSY"
            android:textColor="#E3FFDD"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonCatCornish"
            android:layout_width="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_animal_buttom"
            android:fontFamily="@font/maiandra"
            android:text="CORNISH REX"
            android:textColor="#E3FFDD"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonCatSfinks"
            android:layout_width="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_animal_buttom"
            android:fontFamily="@font/maiandra"
            android:text="DOŃSKI SFINKS"
            android:textColor="#E3FFDD"
            android:textSize="24sp" />
        <Button
            android:id="@+id/buttonCatBobtail"
            android:layout_width="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_animal_buttom"
            android:fontFamily="@font/maiandra"
            android:text="JAPOŃSKI BOBTAIL"
            android:textColor="#E3FFDD"
            android:textSize="24sp" />
        <Button
            android:id="@+id/buttonCatKorat"
            android:layout_width="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_animal_buttom"
            android:fontFamily="@font/maiandra"
            android:text="KORAT"
            android:textColor="#E3FFDD"
            android:textSize="24sp" />
        <Button
            android:id="@+id/buttonCatMau"
            android:layout_width="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_animal_buttom"
            android:fontFamily="@font/maiandra"
            android:text="EGIPSKI MAU"
            android:textColor="#E3FFDD"
            android:textSize="24sp" />
        <Button
            android:id="@+id/buttonCatHimalajski"
            android:layout_width="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_animal_buttom"
            android:fontFamily="@font/maiandra"
            android:text="HIMALAJSKI"
            android:textColor="#E3FFDD"
            android:textSize="24sp" />
        <Button
            android:id="@+id/buttonCatTiffanie"
            android:layout_width="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_animal_buttom"
            android:fontFamily="@font/maiandra"
            android:text="TIFFANIE"
            android:textColor="#E3FFDD"
            android:textSize="24sp" />
        <Button
            android:id="@+id/buttonCatBirmanski"
            android:layout_width="match_parent"
            android:layout_marginEnd="40dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_animal_buttom"
            android:fontFamily="@font/maiandra"
            android:text="ŚWIĘTY BIRMAŃSKI"
            android:textColor="#E3FFDD"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/ButtonCancel"
                android:layout_width="180dp"
                android:layout_height="57dp"
                android:background="@drawable/bg_login_button"
                android:fontFamily="@font/maiandra"
                android:text="@string/ButtonCancel"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#E3FFDD"
                android:textSize="24sp" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>
