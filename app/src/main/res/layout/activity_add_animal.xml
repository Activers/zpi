<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@drawable/addanimal_header">

            <TextView
                android:id="@+id/TextViewAddAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maiandra"
                android:layout_marginBottom="12dp"
                android:text="@string/TextViewAddAnimal"
                android:textColor="#EAFBC7"
                android:textSize="28sp"
                tools:ignore="RtlHardcoded"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ImageViewDog"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:src="#E9FAC4"
                app:civ_border_color="#619F60"
                app:civ_border_width="1dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ImageViewCat"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:src="#E9FAC4"
                app:civ_border_color="#619F60"
                app:civ_border_width="1dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ImageViewBird"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:src="#E9FAC4"
                app:civ_border_color="#619F60"
                app:civ_border_width="1dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ImageViewReptile"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:src="#E9FAC4"
                app:civ_border_color="#619F60"
                app:civ_border_width="1dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ImageViewAmphibian"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:src="#E9FAC4"
                app:civ_border_color="#619F60"
                app:civ_border_width="1dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ImageViewIvertebrate"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:src="#E9FAC4"
                app:civ_border_color="#619F60"
                app:civ_border_width="1dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/ButtonCancel"
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_login_button"
            android:fontFamily="@font/maiandra"
            android:text="@string/ButtonCancel"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#E3FFDD"
            android:textSize="24sp" />

    </LinearLayout>

</ScrollView>
